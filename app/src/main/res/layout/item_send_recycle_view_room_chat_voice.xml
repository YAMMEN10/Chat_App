<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_view_send_message_voice"
    android:background="@drawable/ripple"
    android:gravity="end"
    android:orientation="vertical"
    android:tag="item_view_send_message_voice">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/send_message_chat"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_send_play_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000 " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/message_send_voice_seek_bar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:progress="111" />

                <TextView
                    android:id="@+id/message_send_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/date_send_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:gravity="end"
            android:paddingRight="10dp"
            android:text="12:00 AM"
            android:textColor="@color/white"
            android:textSize="7dp" />


    </LinearLayout>


</LinearLayout>